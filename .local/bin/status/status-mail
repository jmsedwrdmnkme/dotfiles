#!/bin/sh

case "$BLOCK_BUTTON" in
  1) setsid -f st -t float -g 126x42 -e app-mail ;;
  2) cron-mail & ;;
esac

unread="$(find $XDG_DATA_HOME/mail/INBOX/new/* -type f | wc -l 2>/dev/null)"

pidof mbsync >/dev/null 2>&1 && icon=""

if [ "$icon" = "" ]; then
  echo "$icon"
elif [ "$unread" != "0" ]; then
  echo " $unread"
fi
