#!/bin/sh

read -r capacity </sys/class/power_supply/BAT0/capacity
case "$capacity" in
  10[0-9]) status="ï•¸" ;;
  9[5-9]) status="ï•¸" ;;
  9[0-4]) status="ï–" ;;
  8[0-9]) status="ï–€" ;;
  7[0-9]) status="ï•¿" ;;
  6[0-9]) status="ï•¾" ;;
  5[0-9]) status="ï•½" ;;
  4[0-9]) status="ï•¼" ;;
  3[0-9]) status="ï•»" ;;
  2[0-9]) status="ï•º" ;;
  1[0-9]) status="ï•¹" ;;
  [0-9]) status="ï–" ;;
esac

case $BUTTON in
  3) dunstify -h string:x-dunst-stack-tag:battery "$status Battery" "$capacity%" ;;
  4) xbacklight -inc 5 && dunstify -h string:x-dunst-stack-tag:backlight "ğŸ–µ Backlight $(xbacklight -get)%" ;;
  5) xbacklight -dec 5 && dunstify -h string:x-dunst-stack-tag:backlight "ğŸ–µ Backlight $(xbacklight -get)%" ;;
esac

echo "$status";
