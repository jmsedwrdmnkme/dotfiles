#!/bin/bash

vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@ | tr -d '.' | egrep -o '[0-9]{3}' | sed 's/^0*//')"
headphones="$(cat /tmp/bluetoothdevices)"

case $BUTTON in
  1) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
  4) wpctl set-volume -l 1.0 @DEFAULT_AUDIO_SINK@ 1%+ && pkill -RTMIN+5 "${STATUSBAR:-dwmblocks}" ;;
  5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- && pkill -RTMIN+5 "${STATUSBAR:-dwmblocks}" ;;
esac

[[ "$headphones" =~ "WH-CH520" ]] && icon="ðŸŽ§" || icon="ï©½"
[[ "$(wpctl get-volume @DEFAULT_AUDIO_SINK@)" =~ "MUTED" ]] && icon="ïª€" && dunstify -h string:x-dunst-stack-tag:volume "ïª€ Volume $vol% (Muted)" || dunstify -h string:x-dunst-stack-tag:volume "ï©½ Volume $vol%"

echo $icon
