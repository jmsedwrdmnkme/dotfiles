#!/bin/sh

case "$BLOCK_BUTTON" in
  1) setsid -f st -t float -g 126x42 -e app-rss ;;
  2) cron-rss & ;;
esac

unread=$(newsboat -x print-unread | cut -d' ' -f1)

pidof newsboat >/dev/null 2>&1 && icon=""

if [ "$icon" = "" ]; then
  echo "$icon"
elif [ "$unread" != "0" ]; then
  echo " $unread"
fi
