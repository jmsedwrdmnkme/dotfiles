#!/bin/sh

unread="$(newsboat -x print-unread | awk '$1 ~ /^[0-9]+$/ { print $1 }')"
icon="îŠ‹"

case $BUTTON in
  1) setsid -f st -t float -g 126x42 -e app-rss ;;
  2) cron-rss & ;;
esac

[ -e /tmp/newsupdate ] && echo "$icon $(cat /tmp/newsupdate 2>/dev/null)" && exit
[ $unread -gt 0 ] && echo "$icon $unread"
