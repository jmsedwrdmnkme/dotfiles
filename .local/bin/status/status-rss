#!/bin/sh

case "$BLOCK_BUTTON" in
  1) setsid -f st -t float -g 126x42 -e app-rss ;;
  2) cron-rss & ;;
esac

while true; do
  unread=$(newsboat -x print-unread | cut -d' ' -f1)

  if [ $unread != "Error:" ]; then
    cat /tmp/newsupdate 2>/dev/null || echo "îŠ‹ $unread"
    break
  fi
  sleep 0.2s
done
