#!/bin/sh

xrdb $XDG_CONFIG_HOME/x11/xresources & xrdbpid=$!

pipewire &
pipewire-pulse &

dwmblocks &
fehbg &

xset r rate 300 50 &
setxkbmap -option caps:escape &
xset -q | grep "Caps Lock:\s*on" && xdotool key Caps_Lock &

dunst &
fcitx5 &
syncthing &
HOME=$XDG_DATA_HOME/ollama ollama serve &

mpd &
mpdup &
calcurse --daemon &

[ -n "$xrdbpid" ] && wait "$xrdbpid"
