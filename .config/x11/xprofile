#!/bin/sh

xrdb $XDG_CONFIG_HOME/x11/xresources & xrdbpid=$!

xset r rate 300 50 &
setxkbmap -option caps:escape &
xset -q | grep "Caps Lock:\s*on" && xdotool key Caps_Lock &

pipewire &
pipewire-pulse &

syncthing &
mpd &
mpdup &
calcurse --daemon &

feh --no-fehbg --bg-fill $(cat $HOME/.cache/wal/wal) &

dwmblocks &
dunst &
external-monitor &
fcitx5 &

[ -n "$xrdbpid" ] && wait "$xrdbpid"
